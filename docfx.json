{
  "$schema": "https://gh-proxy.com/raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": ".",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "dest": "api",
      "allowCompilationErrors": true,
      "properties": {
        "TargetFramework":"net472"
      }
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "output/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**",
          "icc.png"
        ]
      }
    ],
    "output": "output",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "ICC-CE Dev docs",
      "_appTitle": "InkCanvasForClass CommunityEdition Dev docs",
      "_disableContribution": true,
      "_enableSearch": true,
      "_appFaviconPath": "favicon.ico",
      "pdf": false
    }
  }
}